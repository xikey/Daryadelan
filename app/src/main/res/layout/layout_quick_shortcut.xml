<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lblQuickShortcut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingLeft="15dp"
        android:paddingBottom="10dp"
        android:paddingTop="25dp"
        android:paddingRight="15dp"
        android:text="@string/quick_shortcut"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/very_small_font_size" />


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:alpha="0.8"
        android:layout_height="wrap_content"
        android:background="#55FFFFFF">

        <LinearLayout
            android:id="@+id/lyQuickShortcutsLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/crdPayrolls"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:id="@+id/lyRoot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/lyUploadBottom"
                        android:alpha="0.6"
                        android:padding="25dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_assignment_colored_96dp" />


                    <FrameLayout
                        android:id="@+id/lyUploadBottom"
                        android:layout_width="match_parent"
                        android:background="@color/colorGray"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/colorWhite" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/payroll"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/very_small_10" />


                    </FrameLayout>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/lyAhkam"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/lyCustomersList"
                        android:padding="25dp"
                        android:alpha="0.6"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_description_white_96dp" />


                    <FrameLayout
                        android:id="@+id/lyCustomersList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorGray"
                        android:layout_alignParentBottom="true">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/colorGray" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/ahkam"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/very_small_10" />


                    </FrameLayout>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/crdNews"

                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/lyOrdersList"
                        android:alpha="0.6"
                        android:padding="25dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_notifications_active_white_96dp" />


                    <FrameLayout
                        android:id="@+id/lyOrdersList"
                        android:layout_width="match_parent"
                        android:background="@color/colorGray"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/colorWhite" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="اخبار و اطلاعیه ها"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/very_small_10" />


                    </FrameLayout>


                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/crdGallery"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/lyTomorrowOrder"
                        android:alpha="0.6"
                        android:padding="25dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_photo_album_white_96dp" />


                    <FrameLayout
                        android:id="@+id/lyTomorrowOrder"
                        android:layout_width="match_parent"
                        android:background="@color/colorGray"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/colorWhite" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="آلبوم تصاویر"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/very_small_10" />


                    </FrameLayout>


                </RelativeLayout>

            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:id="@+id/crdPrinter"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:alpha="0.2"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="4dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/lyPrinter"
                        android:alpha="0.9"
                        android:padding="25dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_rate_review_white_96dp" />


                    <FrameLayout
                        android:id="@+id/lyPrinter"
                        android:background="@color/colorGray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/colorWhite" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="نظرسنجی"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/very_small_10" />


                    </FrameLayout>


                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/crdHelp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:alpha="0.2"
                android:layout_marginLeft="15dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/lyHelp"
                        android:alpha="0.9"
                        android:padding="25dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_help_outline_white_96dp" />

                    <FrameLayout
                        android:id="@+id/lyHelp"
                        android:layout_width="match_parent"
                        android:background="@color/colorGray"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/colorWhite" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="درباره ما"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/very_small_10" />


                    </FrameLayout>


                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>


    </HorizontalScrollView>


</LinearLayout>